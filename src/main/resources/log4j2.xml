<?xml version="1.0" encoding="UTF-8"?>

<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">logs</Property>
        <!--        <Property name="basePath">logs</Property>-->
        <!--        <Property name="basePath">logs</Property>-->
    </Properties>

    <Appenders>
        <File name="FILE1" fileName="${basePath}/my_super_puper.log" append="true">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n" />
        </File>

        <File name="FILE2" fileName="${basePath}/logfile2.log" append="true">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n" />
        </File>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-10p %d{dd.MM.yyyy | HH:mm:ss:msss} blah blah  [%t] ____ (%F:%L) - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="FILE1"/>
            <AppenderRef ref="STDOUT" />
        </Root>
        <!--        <Logger name="super_logger" level="trace" additivity="false">-->
        <!--            <AppenderRef ref="FILE2" />-->
        <!--            <AppenderRef ref="STDOUT" />-->
        <!--        </Logger>-->
        <!--        <Logger name="ru.geekbrains.classworks.log4j_junit.LoggingExample" level="trace" additivity="false">-->
        <!--            <AppenderRef ref="FILE2" />-->
        <!--        </Logger>-->
        <Logger name="ru.geekbrains.classworks.log4j_junit" level="trace" additivity="false">
            <AppenderRef ref="FILE2" />
            <AppenderRef ref="STDOUT" />
        </Logger>
        <!--        <Logger name="ru.geekbrains.logging.StableModule" level="error" />-->
    </Loggers>
</Configuration>